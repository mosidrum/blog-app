<% content_for :head do %>
  <%= stylesheet_link_tag 'forgot', media: 'all' %>
<% end %>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'forgot-password-form', method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <h2>Forgot your password?</h2>
  <div class="field">
    <%= f.label :email, class: "field-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-field" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: "submit-button" %>
  </div>
  <%= render "devise/shared/links" %>
<% end %>
